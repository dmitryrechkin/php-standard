{
    "name": "dmitryrechkin/php-standard",
	"type": "php-standard",
    "description": "Dmitry Rechkin's - PHP Coding Standard",
    "keywords": [
    ],
    "license": "AGPL-3.0-only",
    "authors": [
        {
            "name": "Dmitry Rechkin",
            "email": "rechkin@gmail.com",
            "homepage": "https://github.com/dmitryrechkin/"
        }
    ],
    "require": {
        "php": ">=7.4",
        "overtrue/phplint": "^3.4",
        "squizlabs/php_codesniffer": "^3.13",
        "sirbrillig/phpcs-variable-analysis": "^2.12",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "slevomat/coding-standard": "^8.20.0"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.0 || ^11.0"
    },
    "bin": [
        "bin/phpcs.sh",
        "bin/phpcbf.sh",
        "bin/phplint.sh"
    ],
    "scripts": {
        "post-install-cmd": [
            "@fix-slevomat-bug"
        ],
        "post-update-cmd": [
            "@fix-slevomat-bug"
        ],
        "fix-slevomat-bug": "php bin/fix-slevomat-bug.php",
        "test": [
            "@test:lint",
            "@test:phpcs",
            "@test:phpunit"
        ],
        "test:lint": "phplint tests/ --no-cache",
        "test:phpcs": "phpcs tests/ --standard=php-standard.xml --exclude=Squiz.Commenting.FunctionComment",
        "test:phpunit": "phpunit",
        "fix": "phpcbf tests/ --standard=php-standard.xml"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
