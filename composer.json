{
    "name": "dmitryrechkin/php-standard",
	"type": "php-standard",
    "description": "Dmitry Rechkin's - PHP Coding Standard",
    "keywords": [
    ],
    "license": "AGPL-3.0-only",
    "authors": [
        {
            "name": "Dmitry Rechkin",
            "email": "rechkin@gmail.com",
            "homepage": "https://github.com/dmitryrechkin/"
        }
    ],
    "require": {
        "php": ">=7.4",
        "overtrue/phplint": "^3.4|^9.0",
        "squizlabs/php_codesniffer": "^3.13",
        "sirbrillig/phpcs-variable-analysis": "^2.12",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "slevomat/coding-standard": "^8.20.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-strict-rules": "^2.0",
        "php-stubs/wordpress-stubs": "^6.0",
        "szepeviktor/phpstan-wordpress": "^2.0"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.1.x-dev"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.0 || ^11.0"
    },
    "bin": [
        "bin/phpcs.sh",
        "bin/phpcbf.sh",
        "bin/phplint.sh",
        "bin/phpstan.sh"
    ],
    "scripts": {
        "php-standard:analyse": "phpstan analyse src --configuration=php-standard.neon --memory-limit=1G",
        "php-standard:check": [
            "@php-standard:lint",
            "@php-standard:phpcs",
            "@php-standard:phpstan"
        ],
        "php-standard:fix": [
            "phpcbf src --standard=php-standard.xml --report=code --cache"
        ],
        "php-standard:lint": "phplint src --no-cache",
        "php-standard:phpcs": "phpcs src --standard=php-standard.xml --report=code --cache",
        "php-standard:phpstan": "phpstan analyse src --configuration=php-standard.neon --memory-limit=1G",
        "fix-slevomat-bug": "php bin/fix-slevomat-bug.php",
        "test": [
            "@test:lint",
            "@test:phpcs",
            "@test:phpstan",
            "@test:phpunit"
        ],
        "test:lint": "phplint tests/ --no-cache",
        "test:phpcs": "phpcs tests/ --standard=php-standard.xml --exclude=Squiz.Commenting.FunctionComment",
        "test:phpstan": "phpstan analyse --configuration=php-standard.neon",
        "test:phpunit": "phpunit",
        "fix": [
            "@fix:phpcbf",
            "@fix:phpstan"
        ],
        "fix:phpcbf": "phpcbf tests/ --standard=php-standard.xml",
        "fix:phpstan": "phpstan analyse --configuration=php-standard.neon --fix"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
